# Include essential files
include README.md
include LICENSE
include pyproject.toml
include setup.py

# Include source code
recursive-include payagency_api *.py

# Include tests (optional - remove this line if you don't want tests in the package)
recursive-include tests *.py

# Exclude development files
exclude deploy.sh
exclude Makefile
exclude run_tests.py
exclude examples.py
exclude requirements-dev.txt
exclude .gitignore
exclude COMPARISON.md
exclude DEPLOYMENT*.md
exclude INTEGRATION_TEST_RESULTS*.md

# Exclude build artifacts and cache
prune tests/__pycache__
prune payagency_api/__pycache__
global-exclude *.pyc
global-exclude *.pyo
global-exclude __pycache__
global-exclude .DS_Store
global-exclude *.swp
global-exclude *.swo
global-exclude *~
